{
  "name": "vue-cli-ssr-example",
  "version": "0.1.0",
  "private": true,
  "config": {
    "functionsDist": "functions/dist",
    "hostingDist": "functions/dist/app"
  },
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "npm run build:server -- --silent && npm run build:client -- --no-clean --silent && npm run build:functions",
    "build:server": "cross-env WEBPACK_TARGET=node vue-cli-service build --dest $npm_package_config_hostingDist",
    "build:client": "vue-cli-service build --dest $npm_package_config_hostingDist",
    "build:functions": "./functions/node_modules/.bin/tsc --project ./functions --outDir $npm_package_config_functionsDist && npm run duplicateTemplate",
    "duplicateTemplate": "cp ./src/index.template.html $npm_package_config_functionsDist/index.template.html",
    "deploy": "npm run deploy:hosting && npm run deploy:functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "serve:pro": "npm-run-all --parallel serve:pro:client serve:pro:server",
    "serve:pro:client": "vue-cli-service serve --port 8081 --mode production",
    "serve:pro:server": "cross-env NODE_ENV=production node scripts/start",
    "serve:dev": "npm-run-all --parallel serve:dev:client serve:dev:server",
    "serve:dev:client": "vue-cli-service serve --port 8081 --mode development",
    "serve:dev:server": "cross-env NODE_ENV=development node scripts/start",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "http-proxy-middleware": "^0.19.1",
    "register-service-worker": "^1.5.2",
    "vue": "^2.5.17",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.21",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-pwa": "^3.2.0",
    "@vue/cli-plugin-typescript": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.0.1",
    "typescript": "^3.0.0",
    "vue-template-compiler": "^2.5.17"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint"
    ],
    "*.vue": [
      "vue-cli-service lint"
    ]
  }
}
