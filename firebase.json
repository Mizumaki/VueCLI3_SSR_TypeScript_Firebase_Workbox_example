{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix functions run lint",
      "npm --prefix functions run build"
    ]
  },
  "hosting": {
    "public": "public/img",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}